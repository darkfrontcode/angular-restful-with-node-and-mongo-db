/* ==========================================================================
   -- Home | Header
   ========================================================================== */

header
    box-sizing border-box
    width 100%
    height 86px
    background-color white
    display flex
    flex-direction row
    padding 0 5%

    .left
        width 50%
        align-self center

        h2
            header_logo_style()

    .right
        width 50%
        display flex
        align-self center
        justify-content flex-end

        button
            button_green()

            &:hover
                button_green_hover()
