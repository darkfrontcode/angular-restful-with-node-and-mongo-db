/* ==========================================================================
   -- Home | Card_list
   ========================================================================== */

.card_list
    display flex
    flex-grow 1
    background-color blue

    .load
    .gone
        gone_message()
        display flex
        flex-grow 1
        justify-content center
        align-items center

    ul
        display flex
        justify-content space-around
        flex-wrap wrap
        list-style none
        padding 5% 5% 0 5%
        margin 0
        flex-grow 1

        li
            width 28%
            height 420px
            margin-bottom 5%

            .card
                height 420px
                display flex
                position relative

                .load-markup
                    gone_message()
                    position absolute
                    width 100%
                    height 100%
                    border-radius 6px
                    background-color alpha(green, .95)
                    display flex
                    flex-direction column
                    justify-content center
                    text-align center
                    flex-grow 1

                .front
                    border-radius 6px
                    background-color blue_soft
                    box-sizing border-box
                    padding 15px
                    display flex
                    flex-direction column
                    justify-content flex-end
                    flex-grow 1

                    .image
                        display flex
                        justify-content center

                        .circle
                            width 120px
                            height @width
                            border-radius @width
                            display flex
                            justify-content center
                            overflow hidden

                            img
                                height 100%
                                width 100%
                                object-fit cover

                    .text
                        margin 60px auto
                        display flex
                        flex-direction column

                        h3
                            card_text()
                            text-align center
                            margin-bottom 10px
                        p
                            card_text()
                            text-align center
                            font-size 20px

                    .button
                        button
                            width 100%
                            button_green()

                            &:hover
                                button_green_hover()

                .back
                .create
                    border-radius 6px
                    background-color blue_soft
                    box-sizing border-box
                    padding 40px
                    flex-direction column
                    justify-content flex-start
                    flex-grow 1
                    display none

                    .remove
                        display flex
                        justify-content center

                        button
                            button_remove()

                    .text
                        display flex
                        flex-direction column
                        flex-grow 1
                        justify-content center

                        input
                            card_input_style()
                            width 100%
                            margin-bottom 20px

                            &::-webkit-input-placeholder
                                color white
                                opacity 1

                            &::-moz-placeholder
                                color white
                                opacity 1

                            &:nth-last-of-type(1)
                                margin-bottom 0

                    .done
                        display flex
                        justify-content center

                        button
                            button_done()


                .create
                    display flex

                    .done
                        opacity .5

                        button
                            cursor default

                        &.active
                            opacity 1

                            button
                                cursor pointer

            &.active
                .card
                    .front
                        display none

                    .back
                        display flex
